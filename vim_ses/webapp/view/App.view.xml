<mvc:View controllerName="com.vimses.vimses.controller.App"
   displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns="sap.m">
    <App id="app">
    <Page enableScrolling="true">
            <customHeader>
                <f:ShellBar
                    title="{i18n>title}"
                    showCopilot="true"
                    showSearch="true"
                    showNotifications="true"
                    showNavButton="false"
                    notificationsNumber="2"
                    navButtonPressed="handleBackButtonPressed"
                >
                    <f:menu />
                    <f:profile>
                        <Avatar initials="ZA" />
                    </f:profile>
                </f:ShellBar>
            </customHeader>
            <f:FlexibleColumnLayout
                id="layout"
                stateChange="onStateChanged"
                layout="{appView>/layout}"
                backgroundDesign="Translucent"
                
            />
        </Page>
    </App>
</mvc:View>